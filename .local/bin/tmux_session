#!/bin/bash

session_name="${1:-default}"

session_exists() {
  tmux has_session -t "$1" 2>/dev/null
}

if [[ -n "$TMUX" ]]; then
  if session_exists "$session_name"; then
    tmux switch-client -t "$session_name"
  else
    tmux new-session -d -s "$session_name"
    tmux switch-client -t "$session_name"
  fi
else
  tmux new-session -As "$session_name"
fi
